---
import logo from '../assets/logo/dark_theme/jm_web_developer.svg'; // Logo Principal
import fiverrIcon from '../assets/fiverr.svg'; // Icono Fiverr
import freelancerIcon from '../assets/freelancer.svg'; // Icono Freelancer
import githubIcon from '../assets/github.svg'; // Icono GitHub
---

<footer class="w-full bg-[#0b0f17] border-t border-white/5"> <!-- Footer Principal -->
	<div class="max-w-5xl mx-auto px-6 py-12"> <!-- Contenedor Central -->
		<div class="bg-white/5 border border-white/5 rounded-2xl p-8 flex flex-col md:flex-row justify-between gap-10"> <!-- Card Footer -->

			<!-- Marca -->
			<div class="flex flex-col gap-4">
				<a href="#home" class="inline-flex items-center gap-2"> <!-- Link Inicio -->
					<img
						src={logo.src}
						alt="JM Web Designer Logo"
						class="h-8 w-auto opacity-80 hover:opacity-100 transition"
					/>
				</a>

				<p class="text-sm text-gray-400 max-w-sm"> <!-- Descripción -->
					Web designer & developer crafting fast, modern websites
  					focused on performance, SEO and content.
				</p>

				<!-- Redes -->
				<div class="flex items-center gap-4">
					<a
						href="https://es.fiverr.com/jaelmeire/"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Fiverr"
						class="w-11 h-11 flex items-center justify-center rounded-full
							bg-white/5 border border-white/10
							text-gray-400 hover:text-white
							hover:bg-white/10 hover:border-white/20
							transition"
					>
						<img
							src={fiverrIcon.src}
							alt="Fiverr"
							class="w-5 h-5 opacity-70 group-hover:opacity-100 transition"
						/>
					</a> <!-- Fiverr -->

					<a
						href="https://www.freelancer.com/u/jaelmeire"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Freelancer"
						class="w-11 h-11 flex items-center justify-center rounded-full
							bg-white/5 border border-white/10
							text-gray-400 hover:text-white
							hover:bg-white/10 hover:border-white/20
							transition"
					>
						<img
							src={freelancerIcon.src}
							alt="Freelancer"
							class="w-5 h-5 opacity-70 group-hover:opacity-100 transition"
						/>
					</a> <!-- Freelancer -->

					<a
						href="https://github.com/jaelmeire"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="GitHub"
						class="w-11 h-11 flex items-center justify-center rounded-full
							bg-white/5 border border-white/10
							text-gray-400 hover:text-white
							hover:bg-white/10 hover:border-white/20
							transition"
					>
						<img
							src={githubIcon.src}
							alt="GitHub"
							class="w-5 h-5 opacity-70 group-hover:opacity-100 transition"
						/>
					</a> <!-- GitHub -->
				</div>

			</div>

			<!-- Navegación -->
			<nav>
				<ul class="flex flex-col gap-3 text-sm text-gray-400 items-end text-right">
					<li><a href="#who-i-am" class="hover:text-white transition relative hover:after:w-full">Who I Am</a></li>
					<li><a href="#experience" class="hover:text-white transition relative hover:after:w-full">Experience</a></li>
					<li><a href="#portfolio" class="hover:text-white transition relative hover:after:w-full">Portfolio</a></li>
					<li><a href="#testimonials" class="hover:text-white transition relative hover:after:w-full">Testimonials</a></li>
					<li><a href="#contact" class="hover:text-white transition relative hover:after:w-full">Contact</a></li>
				</ul>
			</nav>
		</div>

		<!-- Barra Inferior -->
		<div class="mt-12 pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
			<p class="text-xs text-gray-500"> <!-- Copyright -->
				© {new Date().getFullYear()} JM. All rights reserved.
			</p>

			<p class="text-xs text-gray-500 tracking-widest uppercase"> <!-- Firma -->
				Designed & Built by JM
			</p>
		</div>
	</div>
</footer>