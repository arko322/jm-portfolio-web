---
interface Props {
  icon: string; // Ruta del icono
  label: string; // Texto del tag
}

const { icon, label } = Astro.props; // Props del componente
---

<!-- Tag pill -->
<span
  class={`flex items-center gap-2 rounded-full bg-white/5 border border-white/10
    text-gray-300 hover:bg-white/10 transition hover:scale-[1.03] px-4 py-2 text-sm
  `}
>
  <!-- Tag icon -->
  <img
    src={icon}
    alt={label}
    class="opacity-80 w-4 h-4"
  />

  <!-- Tag label -->
  {label}
</span>