---
import logo from '../assets/logo/dark_theme/jm_web_developer.svg'; // Logo Principal
---

<header class="w-full fixed top-0 left-0 z-50 bg-[#0b0f17]/80 backdrop-blur border-b border-white/5"> <!-- Header Sticky -->
	<div class="max-w-5xl mx-auto px-6 py-5 flex justify-between items-center"> <!-- Contenedor Central -->

		<!-- Logo -->
		<a href="#home" class="flex items-center gap-2"> <!-- Link Al Inicio -->
			<img
				src={logo.src}
				alt="JM Web Designer Logo"
				class="h-8 w-auto opacity-90 hover:opacity-100 transition"
			/>
		</a>

		<!-- Navegación Desktop -->
		<nav class="hidden md:block">
			<ul class="flex items-center gap-8 text-sm text-gray-300">
				<li><a href="#who-i-am" class="hover:text-white transition">Who I Am</a></li> <!-- Sección Who I Am -->
				<li><a href="#experience" class="hover:text-white transition">Experience</a></li> <!-- Sección Experience -->
				<li><a href="#portfolio" class="hover:text-white transition">Portfolio</a></li> <!-- Sección Portfolio -->
				<li><a href="#testimonials" class="hover:text-white transition">Testimonials</a></li> <!-- Sección Testimonials -->
				<li>
					<a
						href="#contact"
						class="px-4 py-2 rounded-full bg-white text-black font-medium hover:bg-gray-200 transition"
					>
						Contact
					</a> <!-- Botón Contact -->
				</li>
			</ul>
		</nav>

		<!-- Botón Mobile -->
        <button
            id="menuToggle"
            aria-label="Toggle menu"
            class="md:hidden relative w-10 h-10 flex items-center justify-center
                rounded-full border border-white/10
                text-white hover:bg-white/5 transition"
        >
            <!-- Icono Burger -->
            <svg
                id="iconBurger"
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 absolute transition-opacity duration-200"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M4 6h16M4 12h16M4 18h16" />
            </svg>

            <!-- Icono Close -->
            <svg
                id="iconClose"
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 absolute opacity-0 transition-opacity duration-200"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                    d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
	</div>

	<!-- Menú Mobile -->
	<div
		id="mobileMenu"
		class="absolute top-full left-0 w-full bg-[#0b0f17]/95 backdrop-blur
			border-b border-white/5
			opacity-0 pointer-events-none
			transition-all duration-300 md:hidden"
	>
		<nav class="max-w-5xl mx-auto px-6 py-6">
			<ul class="flex flex-col gap-5 text-sm text-gray-300">
				<li><a href="#who-i-am" class="hover:text-white transition">Who I Am</a></li>
				<li><a href="#experience" class="hover:text-white transition">Experience</a></li>
				<li><a href="#portfolio" class="hover:text-white transition">Portfolio</a></li>
				<li><a href="#testimonials" class="hover:text-white transition">Testimonials</a></li>

				<li class="pt-4">
					<a
						href="#contact"
						class="inline-block px-6 py-3 rounded-full
							bg-white text-black font-medium
							hover:bg-gray-200 transition"
					>
						Contact
					</a> <!-- Botón Contact Mobile -->
				</li>
			</ul>
		</nav>
	</div>
</header>

<script is:inline>
	const toggle = document.getElementById('menuToggle'); // Botón Toggle
	const menu = document.getElementById('mobileMenu'); // Menú Mobile

	const burger = toggle.querySelector('#iconBurger'); // Icono Burger
	const closeIcon = toggle.querySelector('#iconClose'); // Icono Close

	toggle.addEventListener('click', () => { // Abrir / Cerrar Menú
		menu.classList.toggle('opacity-0');
		menu.classList.toggle('pointer-events-none');

		if (burger && closeIcon) {
			burger.classList.toggle('opacity-0');
			closeIcon.classList.toggle('opacity-0');
		}
	});

	menu.querySelectorAll('a').forEach(link => { // Cerrar Al Clickear Link
		link.addEventListener('click', () => {
			menu.classList.add('opacity-0', 'pointer-events-none');

			if (burger && closeIcon) {
				burger.classList.remove('opacity-0');
				closeIcon.classList.add('opacity-0');
			}
		});
	});
</script>
