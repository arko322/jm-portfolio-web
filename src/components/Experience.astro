---
// Componentes
import TagList from '../components/portfolio/TagList.astro'; // Lista de tags
---

<section id="experience" class="max-w-5xl mx-auto px-6 py-24"> <!-- Sección experiencia -->

	<!-- Label -->
	<p class="text-xs tracking-widest text-gray-500 text-center mb-6">MY EXPERIENCE</p>

	<!-- Título -->
	<h2 class="text-3xl font-bold mb-12 text-white text-center">Professional Journey</h2>

	<!-- Grid de tarjetas -->
	<div class="grid md:grid-cols-2 gap-6">

		<!-- Card WordPress -->
		<div class="group relative bg-white/5 border border-white/10 rounded-2xl p-8 flex flex-col hover:bg-white/10 transition transform hover:-translate-y-1 hover:shadow-lg">

			<!-- Icono -->
			<div class="absolute -top-6 left-1/2 transform -translate-x-1/2 w-12 h-12 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold text-lg shadow-md transition group-hover:scale-110">
				WP
			</div>

			<!-- Rol -->
			<h3 class="text-xl font-semibold text-white mt-6 text-center">WordPress Developer</h3>

			<!-- Subtítulo -->
			<p class="text-gray-400 text-center">Websites & Online Stores</p>

			<!-- Fecha -->
			<p class="text-sm text-gray-500 mt-1 text-center">2024 — Present</p>

			<!-- Descripción -->
			<p class="text-gray-300 mt-4 leading-relaxed text-center">
				Development and management of WordPress and WooCommerce websites.
				Focused on setup, plugins, content, design and on-page SEO.
			</p>

			<!-- Skills -->
			<div class="mt-6 flex justify-center">
				<TagList tags={['wordpress', 'woocommerce']} align="center"/>
			</div>
		</div>

		<!-- Card Frontend -->
		<div class="group relative bg-white/5 border border-white/10 rounded-2xl p-8 flex flex-col hover:bg-white/10 transition transform hover:-translate-y-1 hover:shadow-lg">

			<!-- Icono -->
			<div class="absolute -top-6 left-1/2 transform -translate-x-1/2 w-12 h-12 rounded-full bg-purple-600 flex items-center justify-center text-white font-bold text-lg shadow-md transition group-hover:scale-110">
				FE
			</div>

			<!-- Rol -->
			<h3 class="text-xl font-semibold text-white mt-6 text-center">Front-End Developer</h3>

			<!-- Subtítulo -->
			<p class="text-gray-400 text-center">Fast Static Websites</p>

			<!-- Fecha -->
			<p class="text-sm text-gray-500 mt-1 text-center">2024 — Present</p>

			<!-- Descripción -->
			<p class="text-gray-300 mt-4 leading-relaxed text-center">
				Creation of modern, fast and static websites focused on performance and SEO.
				Clean front-end development with optimized loading and user experience.
			</p>

			<!-- Skills -->
			<div class="mt-6 flex justify-center">
				<TagList tags={['astro', 'tailwind', 'typescript']} align="center"/>
			</div>
		</div>

	</div>
</section>