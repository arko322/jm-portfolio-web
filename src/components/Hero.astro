---
// Componentes
import Constellation from '../components/effects/Constellation.astro'; // Fondo animado
---

<section id="home" class="relative min-h-screen flex items-center justify-center px-6 overflow-hidden"> <!-- Hero -->

	<!-- Fondo Constellation -->
	<Constellation />

	<!-- Contenido -->
	<div class="relative max-w-5xl w-full text-center flex flex-col items-center">

		<!-- Disponibilidad -->
		<div class="mb-6 inline-flex items-center gap-2 px-4 py-2 rounded-full
			bg-white/5 border border-white/10 text-xs tracking-wide text-gray-400">
			<span class="w-2 h-2 rounded-full bg-green-400"></span>
			Available for new projects
		</div>

		<!-- Título principal -->
		<h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
			Modern websites<br class="hidden md:block" />
			<span class="text-white/60">built for speed & SEO</span>
		</h1>

		<!-- Subtítulo -->
		<p class="text-gray-400 max-w-2xl text-base md:text-lg mb-10">
			I design and develop high-performance landing pages with Astro and Tailwind CSS,
			focused on speed, SEO optimization and clean user experiences.
		</p>

		<!-- Botones CTA -->
		<div class="flex flex-col sm:flex-row gap-4 mb-14">
			<a
				href="#contact"
				class="px-8 py-4 rounded-full bg-white text-black font-semibold
					hover:bg-gray-200 transition"
			>
				Start a project
			</a>

			<a
				href="#portfolio"
				class="px-8 py-4 rounded-full bg-white/10 text-white
					hover:bg-white/20 transition"
			>
				View selected work
			</a>
		</div>

		<!-- Pruebas sociales -->
		<div class="flex flex-wrap justify-center gap-6 text-xs text-gray-500">
			<div class="flex items-center gap-2">
				<span class="text-white font-semibold">&lt;1s</span>
				load time
			</div>

			<div class="w-px h-4 bg-white/10 hidden sm:block"></div>

			<div class="flex items-center gap-2">
				<span class="text-white font-semibold">+90</span>
				PageSpeed score
			</div>

			<div class="w-px h-4 bg-white/10 hidden sm:block"></div>

			<div class="flex items-center gap-2">
				<span class="text-white font-semibold">SEO</span>
				optimized
			</div>
		</div>
	</div>

	<!-- Indicador scroll -->
	<a
		href="#who-i-am"
		aria-label="Scroll to next section"
		class="absolute bottom-10 flex flex-col items-center gap-3
			text-gray-500 hover:text-white transition group"
	>
		<span class="text-[10px] tracking-widest uppercase">
			Scroll
		</span>

		<span
			class="relative w-6 h-10 rounded-full border border-white/20
				flex items-start justify-center
				group-hover:border-white transition"
		>
			<span
				class="w-1 h-2 rounded-full bg-white/60 mt-2
					animate-scroll-indicator"
			></span>
		</span>
	</a>

</section>