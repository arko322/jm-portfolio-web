---
// Data
import { projectsData } from '../data/projectsData.js'; // listado de proyectos

// Components
import ProjectCard from '../components/portfolio/ProjectCard.astro'; // tarjeta individual de proyecto
import ProjectLightbox from '../components/portfolio/ProjectLightbox.astro'; // visor modal de proyectos
---

<section id="portfolio" class="max-w-5xl mx-auto px-6 py-24">
	<!-- Header -->
	<div class="mb-10">
		<p class="text-xs tracking-widest text-gray-500 text-center mb-4">
			PORTFOLIO
		</p>

		<h2 class="text-3xl font-bold text-center mb-3">
			Featured Work
		</h2>

		<p class="text-gray-400 text-center max-w-2xl mx-auto mb-16">
			A selection of real projects and design work showcasing performance, 
			clean code, and user-focused solutions.
		</p>
	</div>

	<!-- Projects Grid -->
	<div class="grid grid-cols-1 gap-6">
		{projectsData.map(project => (
			<ProjectCard {...project} /> <!-- Render de cada proyecto -->
		))}
	</div>

	<!-- Lightbox global -->
	<ProjectLightbox
		projects={[
			...projectsData, // pasar todos los proyectos al lightbox
		]}
	/>
</section>

<!-- Script del lightbox -->
<script src="../scripts/lightbox.ts"></script>